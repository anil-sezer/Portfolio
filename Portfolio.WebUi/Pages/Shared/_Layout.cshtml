<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    
    <link rel="shortcut icon" href="@Url.Content("img/favicon.png")" />

    @{
        const string title = "Anil Sezer's Portfolio";
        const string description = "Made with love in my bare metal setup!";
    
        var request = Context.Request;
        var host = request.Scheme + "://" + request.Host.Value;
        var imageUrl = host + Url.Content("~/img/pp_pic.jpeg");
    }

    <title>@title</title>
    <meta content="" name="@description">
    <meta content="" name="keywords">

    <!-- Open Graph Tags -->
    <meta property="og:title" content="@title">
    <meta property="og:description" content="@description">
    <meta property="og:image" content="@imageUrl">
    <meta property="og:url" content="@host">

    <!-- Twitter Card Tags -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="@title">
    <meta name="twitter:description" content="@description">
    <meta name="twitter:image" content="@imageUrl">

</head>


<body>

<!-- ======= Mobile nav toggle button ======= -->
<i class="bi bi-list mobile-nav-toggle d-xl-none"></i>

<!-- ======= Header ======= -->
<header id="header">
    <div class="d-flex flex-column">

        <div class="profile">
            <img src="@Url.Content("img/pp_pic.jpeg")" class="img-fluid rounded-circle" alt="My profile pic. Lush forest background with me, turned to camera and slightly smiling."/>
            <h1 class="text-light"><a asp-page="@nameof(Index)">Anıl Sezer</a></h1>
            <div class="social-links mt-3 text-center">
                <a href="https://github.com/anil-sezer" target="_blank" class="github"><i class="bx bxl-github"></i></a>
                <a href="https://www.linkedin.com/in/anil-sezer/" target="_blank" class="linkedin"><i class="bx bxl-linkedin"></i></a>
                @* <a href="https://twitter.com/anilsezar" class="twitter"><i class="bx bxl-twitter"></i></a> *@
            </div>
        </div>

        <nav id="navbar" class="nav-menu navbar">
            <ul>
                <li><a href="/#hero" class="nav-link scrollto active"><i class="bx bx-home"></i> <span>Home</span></a></li>
                <li><a href="/#services" class="nav-link scrollto"><i class="bx bx-server"></i> <span>Tech Stack</span></a></li>
                <li><a href="/#about" class="nav-link scrollto"><i class="bx bx-user"></i> <span>About</span></a></li>
                <li><a href="/#resume" class="nav-link scrollto"><i class="bx bx-file-blank"></i> <span>Resume</span></a></li>
                <li><a href="/#contact" class="nav-link scrollto"><i class="bx bx-envelope"></i> <span>Contact</span></a></li>
            </ul>
        </nav><!-- .nav-menu -->
    </div>
</header><!-- End Header -->

@RenderBody()

